<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SkyBlue"
    tools:context=".SmoothingReadingFragment">

    <Button
        android:id="@+id/button23"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circle_shape_back"
        android:fontFamily="@font/montserrat_bold"
        android:text="X"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/sglagnor_chtrnir"
        android:textColor="@color/White"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button23"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/exerciseImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Плавное чтение"
        android:src="@drawable/line_of_gro"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView28" />

    <CheckBox
        android:id="@+id/checkbox_frame_mode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/checkbox_background_selector"
        android:button="@null"
        android:checked="false"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Покадровый режим"
        android:textColor="@drawable/checkbox_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/checkbox_smooth_scroll"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exerciseImage" />

    <CheckBox
        android:id="@+id/checkbox_smooth_scroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/checkbox_background_selector"
        android:button="@null"
        android:checked="false"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Плавная прокрутка"
        android:textColor="@drawable/checkbox_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/checkbox_frame_mode"
        app:layout_constraintTop_toBottomOf="@id/exerciseImage" />

    <CheckBox
        android:id="@+id/checkbox_central_highlight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/checkbox_background_selector"
        android:button="@null"
        android:checked="false"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Центральное выделение"
        android:textColor="@drawable/checkbox_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/checkbox_vertical_focus"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_frame_mode" />

    <CheckBox
        android:id="@+id/checkbox_vertical_focus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/checkbox_background_selector"
        android:button="@null"
        android:checked="false"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:minHeight="48dp"
        android:padding="12dp"
        android:text="Фокус по вертикали"
        android:textColor="@drawable/checkbox_text_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/checkbox_central_highlight"
        app:layout_constraintTop_toBottomOf="@id/checkbox_frame_mode" />

    <TextView
        android:id="@+id/levelValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Уровень: 1"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkbox_central_highlight"
        android:layout_marginTop="16dp" />

    <SeekBar
        android:id="@+id/trainingLevelSeekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:max="9"
        android:progress="0"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/levelValueText"
        tools:progress="0" />

    <Button
        android:id="@+id/button29"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/montserrat_bold"
        android:minHeight="56dp"
        android:padding="12dp"
        android:text="Начать тренировку"
        android:textColor="@color/White"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trainingLevelSeekBar" />

    <Button
        android:id="@+id/button30"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/elipse"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/help_button"
        android:textColor="@color/Black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>